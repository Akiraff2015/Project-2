  body
    block main

    // Trigger the modal with a button
    // Modal
    #myModal.modal.fade(role='dialog')
      .modal-dialog
        // Modal content
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal') Ã—
            h4.modal-title Login to iKeep Today
          .modal-body
            .row
              .col-md-6
                .row.form-margin-bottom
                  h4.font-label-size='Login today!'
                  form.font-cutive-mono(action='/login', method='post')
                    .form-inline.form-margin-bottom
                      label Username
                      input.margin-both-5px.form-control(autocomplete='off' type='text', name='username' placeholder='Username')
                    .form-inline.form-margin-bottom
                      label Password
                      input.margin-both-7px.form-control(type='password', name='password' placeholder='Password')

                    button.btn.btn-danger.form-control(type='submit') Login

                .row.form-margin-bottom.no-padding
                  .col-md-6
                    button.btn.btn-primary.form-control(type='submit')
                      i.fa.fa-facebook(aria-hidden="true")
                  .col-md-6
                    button.btn.btn-info.form-control(type='submit')
                      i.fa.fa-twitter(aria-hidden="true")
              .col-md-6
                .row.form-margin-bottom
                  h4.font-label-size='Sign up for an account!'
                  a.btn.btn-danger.form-control.form-margin-bottom(href="/signup") Signup
                  a.btn.btn-primary.form-control.form-margin-bottom(href="http://localhost:3000/auth/facebook/callback") Facebook
                  a.btn.btn-info.form-control.form-margin-bottom(href="http://127.0.0.1:3000/auth/twitter/callback") Twitter
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close